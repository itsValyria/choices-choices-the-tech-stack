<form>
  <input type="text" placeholder="Search...">
  <button type="submit" name="search" id="search">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" focusable="false" aria-hidden="true">
      <path fill="currentColor" fill-rule="evenodd" d="M10 2a8 8 0 1 0 4.906 14.32l5.387 5.387a1 1 0 0 0 1.414-1.414l-5.387-5.387A8 8 0 0 0 10 2m-6 8a6 6 0 1 1 12 0 6 6 0 0 1-12 0" clip-rule="evenodd"></path>
    </svg>
  </button>
</form>

<style>
  form {
    display: flex;
  }

  input {
    width: 60vw;
    border: none;
    padding: 0 0.6rem;
    border-start-start-radius: var(--border-radius-md);
    border-end-start-radius: var(--border-radius-md);
  }

  input::placeholder {
    font-family: var(--primary-font);
    font-size: var(--font-size-sm);
  }

  button {
    border: none;
    border-start-end-radius: var(--border-radius-md);
    border-end-end-radius: var(--border-radius-md);
    background-color: var(--button-background);
  }

  button svg {
    height: 1.6rem;
    padding: 0.2rem 0
  }

  button svg path {
    fill: var(--button-text);
  }

  /* ---------------- Media Queries ---------------- */

  @media screen and (min-width: 768px) {
    button {
      max-width: 4rem;
    }
  }
</style>